@model IList<EcommerceStore.Models.ProductModel>

    <style>

    </style>

    <p>@Model.Count()</p>

    <table class="table table-bordered">



        <thead>
            <tr>


            <th>Product Name</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>CategoryId</th>
            <th>Status</th>
                 <th>Image</th>





            </tr>





        </thead>




        <tbody>

            @foreach(var am in Model)
            {

                <tr>

                <td data-label="Name">@am.ProductName</td>
                <td data-label="Name">@am.CategoryName</td>
                <td data-label="Description">@am.Description</td>
                <td data-label="Price">@am.Price</td>
                <td data-label="Quantity">@am.Quantity</td>
                <td data-label="CategoryId">@am.CategoryId</td>
                <td data-label="Status">@am.Status</td>
                <td data-label="Image">@am.Image</td>
                       
                        <td>
                        
                            <a asp-action="Edit" asp-controller="Products" asp-route-id="@am.ProductId" class="btn btn-warning">Edit</a>
                            <a asp-action="Detail" asp-controller="Products" asp-route-id="@am.ProductId" class="btn btn-warning">Detail</a>
                            <a asp-action="Delete" asp-controller="Products" asp-route-id="@am.ProductId" class="btn btn-warning">Delete</a>
                    



                        </td>








                </tr>
            



        }





        </tbody>




    </table>